{
  "name": "zotero-name-normalizer",
  "version": "1.2.0",
  "description": "Zotero author name normalizer â€” detect and fix author name variants",
  "main": "index.js",
  "scripts": {
    "start": "zotero-plugin serve",
    "dev": "zotero-plugin serve",
    "build": "zotero-plugin build && cp build/addon/content/scripts/zotero-ner-bundled.js content/scripts/",
    "release": "zotero-plugin release",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "test": "npm run test:unit && npm run test:zotero",
    "test:unit": "jest",
    "test:zotero": "CI=true zotero-plugin test",
    "test:zotero:watch": "zotero-plugin test",
    "test:zotero:debug": "xvfb-run -a node tests/zotero-framework/run-zotero-tests.js --debug",
    "ui-test": "playwright test",
    "ui-test:install": "npx playwright install"
  },
  "keywords": [
    "zotero",
    "name-normalization",
    "metadata"
  ],
  "author": "Marcin Milkowski",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcinmilkowski/zotero-name-normalizer.git"
  },
  "bugs": {
    "url": "https://github.com/marcinmilkowski/zotero-name-normalizer/issues"
  },
  "homepage": "https://github.com/marcinmilkowski/zotero-name-normalizer#readme",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.0",
    "babel-jest": "^29.0.0",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "jest": "^29.0.0",
    "playwright": "^1.40.0",
    "yauzl": "^3.2.0",
    "zotero-plugin": "^8.0.8",
    "zotero-plugin-scaffold": "^0.8.2"
  },
  "zotero-plugin": {
    "id": "zotero-name-normalizer@marcinmilkowski.pl",
    "version": "1.0.0",
    "zotero": {
      "strictMinVersion": "7.0",
      "strictMaxVersion": "8.*"
    },
    "test": {
      "entries": "tests/zotero-framework/test/tests",
      "mocha": {
        "timeout": 60000
      },
      "headless": false,
      "watch": false,
      "startupDelay": 2000,
      "waitForPlugin": "() => typeof Zotero !== 'undefined' && typeof Zotero.NameNormalizer !== 'undefined'"
    },
    "testRunner": {
      "type": "mocha",
      "env": {
        "extensions.zotero-name-normalizer.testMode": true
      }
    }
  }
}
