{
  "name": "zotero-name-normalizer",
  "version": "1.1.0",
  "description": "Zotero extension for author name normalization",
  "main": "index.js",
  "scripts": {
    "start": "zotero-plugin serve",
    "prebuild": "echo 'Building...'",
    "build": "zotero-plugin build",
    "postbuild": "node scripts/fix-build-structure.js",
    "fix-build": "node scripts/fix-build-structure.js",
    "release": "zotero-plugin release",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "test": "npm run test:unit && npm run test:zotero",
    "test:unit": "jest",
    "test:zotero": "zotero-plugin test",
    "test:zotero:build": "node build.js",
    "test:zotero:run": "node tests/zotero-framework/run-zotero-tests.js",
    "test:zotero:debug": "xvfb-run -a node tests/zotero-framework/run-zotero-tests.js --debug",
    "test:zotero:watch": "node tests/zotero-framework/run-zotero-tests.js --watch",
    "dev": "webpack --mode development --watch",
    "ui-test": "playwright test",
    "ui-test:install": "npx playwright install"
  },
  "keywords": [
    "zotero",
    "name-normalization",
    "metadata"
  ],
  "author": "Marcin Milkowski",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcinmilkowski/zotero-name-normalizer.git"
  },
  "bugs": {
    "url": "https://github.com/marcinmilkowski/zotero-name-normalizer/issues"
  },
  "homepage": "https://github.com/marcinmilkowski/zotero-name-normalizer#readme",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.0",
    "babel-jest": "^29.0.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "jest": "^29.0.0",
    "playwright": "^1.40.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "yauzl": "^3.2.0",
    "zotero-plugin": "^8.0.8",
    "zotero-plugin-scaffold": "^0.8.2"
  },
  "zotero-plugin": {
    "id": "zotero-name-normalizer@marcinmilkowski.pl",
    "version": "1.0.0",
    "zotero": {
      "strictMinVersion": "7.0",
      "strictMaxVersion": "8.*"
    },
    "testRunner": {
      "type": "mocha",
      "testFile": "tests/zotero-framework/test/tests/zotero-name-normalizer-test.js",
      "env": {
        "extensions.zotero-name-normalizer.testMode": true
      }
    }
  }
}
